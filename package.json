{
  "name": "el-meu-pwa-pro",
  "productName": "PWA MAKER",
  "version": "1.0.10",
  "description": "El meu launcher de PWAs personalitzat",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "npm version patch --no-git-tag-version && electron-builder --publish always"
  },
  "author": "Marc",
  "license": "ISC",
  "dependencies": {
    "electron-context-menu": "^3.6.1"
  },
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.marc.pwamkr",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      "extensions/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "hitzench",
      "repo": "el-meu-pwa-pro",
      "releaseType": "release"
    }
  }
}
